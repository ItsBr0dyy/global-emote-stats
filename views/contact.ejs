    <title>Stats | Contact</title>
    <meta name="description" content="Contact with @ZonianMidian" />
    <meta property="og:title" content="Stats | Contact" />
    <meta property="og:image" content="<%= avatar %>" />
    <meta property="og:description" content="Contact with @ZonianMidian" />
