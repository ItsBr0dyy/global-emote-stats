<%- include('navbar') -%>
<head>
    <title>Stats | Global</title>
    <meta property="og:image" content="/static/DankG.png" />
    <meta name="description" content="Global Emote Stats" />
</head>
<body>
    <h1 class="title">Global - Emotes Stats</h1>
    <div class="stats">
        <div class="top" id="twitch">
            <div class="header">
                <img
                    class="logo"
                    src="/static/twitch.png"
                    alt="Twitch"
                    draggable="false"
                />
                <h3>Twitch</h3>
            </div>
            <div class="emotes">
                <% for (const emote of data.Twitch) { %>
                <h3 class="emote_name"><%= emote.name %></h3>
                <p class="emote_usage"><%= emote.usage.toLocaleString() %></p>
                <img
                    class="emote_image"
                    src="<%= emote.link %>"
                    onerror="this.src='/static/unavailable.png';"
                />
                <% } %>
            </div>
        </div>

